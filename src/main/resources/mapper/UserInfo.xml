<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxjz.dao.UserInfoDao">
    <!--目的:为dao接口方法提供sql语句配置
    即针对dao接口中的方法编写我们的sql语句-->


    <select id="getUserInfoByName" resultType="UserInfo" parameterType="String">
        SELECT *
        FROM t_user_info
        WHERE username = #{username}
    </select>




</mapper>